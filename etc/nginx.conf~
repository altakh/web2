server {
		listen 80 default_server;
		server_name _;
		
		location ^~ / {
			proxy_pass http://0.0.0.0:8000;
		}

		location ~* \.(.*)$ {
			root /home/kotya/web/public;
		}
		
		location ^~ /hello/ {
                        proxy_pass http://0.0.0.0:8080;
                }
		location ^~ /question/# {
                        proxy_pass http://0.0.0.0:8000;
                }
	}
